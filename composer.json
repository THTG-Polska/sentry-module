{
  "name": "facile-it/sentry-module",
  "type": "library",
  "description": "Module to integrate Sentry with Zend Framework 2",
  "homepage": "https://github.com/facile-it/sentry-module",
  "license": "MIT",
  "keywords": ["sentry", "raven", "log", "logs", "exception", "exceptions", "error", "errors", "zf", "zf2", "zend"],
  "authors": [
    {
      "name": "Thomas Vargiu",
      "email": "thomas.vargiu@facile.it"
    }
  ],
  "autoload": {
    "psr-4": {
      "Facile\\SentryModule\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Facile\\SentryModuleTest\\": "tests/"
    }
  },
  "require": {
    "php": "^5.5 || ^7.0",
    "sentry/sentry": "^0.19",
    "zendframework/zend-stdlib": "^2.7 || ^3.0.1",
    "zendframework/zend-servicemanager": "^2.7 || ^3.0.3",
    "zendframework/zend-mvc": "^2.7",
    "zendframework/zend-modulemanager": "^2.5",
    "zendframework/zend-view": "^2.5",
    "zendframework/zend-eventmanager": "^2.5 || ^3.0",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "friendsofphp/php-cs-fixer": "^1.11"
  },
  "provide": {
    "psr/log-implementation": "1.0.0"
  },
  "extra": {
    "zf": {
      "module": "Facile\\SentryModule"
    }
  },
  "scripts": {
    "test": ["@phpunit", "@phpcs"],
    "ci-test": [
      "@ci-phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit",
    "ci-phpunit": "phpunit --coverage-clover=coverage.clover",
    "phpcs": [
      "php-cs-fixer fix -v --diff --dry-run src/",
      "php-cs-fixer fix -v --diff --dry-run tests/"
    ],
    "phpcs-fix": [
      "php-cs-fixer fix -v --diff src/",
      "php-cs-fixer fix -v --diff tests/"
    ]
  }
}
